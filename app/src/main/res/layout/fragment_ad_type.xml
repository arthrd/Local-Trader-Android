<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="16dp"
              android:paddingBottom="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible"
            android:orientation="vertical">

            <TextView
                    style="@style/TextSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/text_i_want_to"/>
        
            <Spinner
                    android:id="@+id/typeSpinner"
                    android:theme="@style/SpinnerTheme"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        
            <View
                    android:background="?android:attr/dividerHorizontal"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
        
    </LinearLayout>

    <!-- Location -->

    <include layout="@layout/view_location"/>

    <!-- Payment Method -->

    <View
            android:background="?android:attr/dividerHorizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <LinearLayout
            android:id="@+id/paymentMethodLayout"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:orientation="vertical"
            tools:visibility="visible">

        <TextView
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_payment_method"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_padding_small"/>

        <Spinner
                android:id="@+id/paymentMethodSpinner"
                android:theme="@style/SpinnerTheme"
                style="@style/TextLarge.SmallAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_padding_small"/>

        <TextView
                style="@style/TextSmall"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/advertisement_payment_method"
                android:linksClickable="true"
                android:autoLink="web"
                android:textColorLink="@color/body_text_blue_1"/>
        
    </LinearLayout>
    

</LinearLayout>
