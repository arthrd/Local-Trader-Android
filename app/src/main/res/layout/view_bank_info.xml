<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/bankNameLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
            android:id="@+id/bankNameTitle"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_padding"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:maxLines="3"
            android:text="@string/text_bank_name"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_padding_small"/>

    <EditText
            android:id="@+id/editBankName"
            style="@style/TextLarge.SmallAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_padding"
            android:layout_marginRight="@dimen/activity_padding"
            android:theme="@style/EditTextTheme"
            android:hint="@string/text_bank_name_hint"/>

    <TextView
            style="@style/TextSmall"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:text="@string/advertisement_bank"/>

    <View
            android:background="?android:attr/dividerHorizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    
</LinearLayout>