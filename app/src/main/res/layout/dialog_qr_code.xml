<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

    <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qr_code_dialog_header"
            style="@style/TextLarge.SmallAction"
            android:layout_gravity="center"
            android:paddingTop="16dp"/>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

    <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/large_barcode_width"
            android:layout_height="@dimen/large_barcode_width"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_color"
            />

    <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:padding="0dp"
            android:layout_margin="0dp"/>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp" 
            style="@style/DividerHorizontal"
            android:padding="0dp"
            android:layout_margin="0dp"/>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        
        <Button
                android:id="@+id/cancelButton"
                style="@style/BorderlessButtonStyle"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_cancel"
                android:layout_weight="1"/>

        <View
                android:layout_width="1dp"
                android:layout_height="match_parent" 
                style="@style/DividerVertical"
                android:padding="0dp"
                android:layout_margin="0dp"/>

        <ImageButton
                android:contentDescription="@string/desc"
                android:id="@+id/copyButton"
                style="@style/BorderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_content_copy"
                android:layout_weight="0"/>

        <View
                android:layout_width="1dp"
                android:layout_height="match_parent" 
                style="@style/DividerVertical"
                android:padding="0dp"
                android:layout_margin="0dp"/>
        
        <ImageButton
                android:contentDescription="@string/desc"
                android:id="@+id/shareButton"
                style="@style/BorderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_social_share"
                android:layout_weight="0"/>
        
    </LinearLayout>
    
</LinearLayout>