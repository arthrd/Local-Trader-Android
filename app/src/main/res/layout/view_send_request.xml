<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <include
            android:id="@android:id/progress"
            layout="@layout/view_progress"
            android:visibility="visible"
            tools:visibility="visible"/>

    <LinearLayout
            android:id="@+id/tradeContent"
            android:scrollbars="none"
            android:visibility="visible"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_padding">

            <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </FrameLayout>

        <View
                style="@style/DividerHorizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <LinearLayout
                android:id="@+id/addressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_padding"
                android:paddingLeft="@dimen/activity_padding"
                android:paddingRight="@dimen/activity_padding"
                android:orientation="vertical">

            <TextView
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send to"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_padding_small"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/address"
                    style="@style/TextLarge.SmallAction"
                    android:theme="@style/CustomAccent"
                    android:hint="@string/hint_bitcoin_address"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/activity_padding"
                    android:paddingLeft="@dimen/activity_padding"
                    android:paddingRight="@dimen/activity_padding"
                    android:orientation="vertical">

                <TextView
                        style="@style/TextSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bitcoin amount"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_padding_small"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <EditText
                            android:id="@+id/amountText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextLarge.SmallAction"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:theme="@style/CustomAccent"
                            android:hint="@string/hint_bitcoin"/>

                    <View
                            android:layout_width="8dp"
                            android:layout_height="match_parent"/>

                    <TextView
                            android:id="@android:id/button1"
                            style="@style/TextLarge.SmallAction.White"
                            android:minWidth="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:background="@drawable/button_blue_selector"
                            android:clickable="true"
                            android:text="@string/btc"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="0"
                            android:layout_marginBottom="2dp"/>

                    <View
                            android:layout_width="@dimen/view_padding_small"
                            android:layout_height="match_parent"/>

                    <EditText
                            android:id="@+id/usdEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextLarge.SmallAction"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="@string/hint_amount"/>

                    <View
                            android:layout_width="8dp"
                            android:layout_height="match_parent"/>

                    <TextView
                            style="@style/TextLarge.SmallAction.White"
                            android:minWidth="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:background="@drawable/button_blue_selector"
                            android:clickable="true"
                            android:text="@string/usd"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="0"
                            android:layout_marginBottom="2dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_padding"
                    android:text="â‰ˆ 0.00 USD"
                    style="@style/TextSmall.Green"
                    android:visibility="gone"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_padding"/>

        <LinearLayout
                android:id="@+id/balanceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/form_balance_label"
                    android:layout_marginLeft="@dimen/activity_padding"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_padding_small"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/view_padding"
                    android:layout_marginRight="@dimen/view_padding"
                    android:paddingLeft="@dimen/activity_padding"
                    android:paddingTop="@dimen/activity_padding"
                    android:paddingBottom="@dimen/activity_padding"
                    android:background="@color/gray_color">

                <TextView
                        android:id="@+id/balanceText"
                        android:textIsSelectable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextLarge.SmallAction"/>

            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_padding"/>

        <FrameLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            <Button
                    android:id="@+id/sendButton"
                    android:layout_margin="@dimen/activity_padding"
                    style="@style/ButtonGreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send"/>

            <Button
                    android:id="@+id/qrButton"
                    android:layout_margin="@dimen/activity_padding"
                    style="@style/ButtonGreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Request"
                    android:visibility="gone"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    style="@style/DividerHorizontal"
                    android:layout_gravity="top"/>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>