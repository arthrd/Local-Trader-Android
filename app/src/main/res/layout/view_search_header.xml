<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/view_padding_xlarge"
        android:paddingBottom="@dimen/view_padding_large"
        android:background="@color/background_gray_color">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:background="@color/white">

            <FrameLayout
                    android:id="@+id/resetMapButton"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    style="@style/BorderlessButtonStyle">

                <ImageView
                        android:contentDescription="@string/desc"
                        android:layout_height="match_parent"
                        android:layout_width="50dp"
                        android:src="@drawable/ic_maps_place"
                        android:layout_gravity="center"/>

            </FrameLayout>

            <AutoCompleteTextView
                    style="@style/TextMedium"
                    android:id="@+id/editLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:hint="Enter city or address"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/mapLayout"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:orientation="horizontal"
                android:background="@color/white">

            <LinearLayout
                    android:id="@+id/mapButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    style="@style/BorderlessButtonStyle"
                    android:layout_weight="1">

                <ImageView
                        android:id="@+id/searchImage"
                        android:contentDescription="@string/desc"
                        android:layout_height="match_parent"
                        android:layout_width="50dp"
                        android:src="@drawable/ic_maps_place"/>

                <TextView
                        style="@style/TextMedium"
                        android:id="@+id/currentLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="- - - -"
                        android:layout_gravity="center_vertical"
                        android:textIsSelectable="true"/>

            </LinearLayout>

            <ImageButton
                    style="@style/BorderlessButtonStyle"
                    android:id="@+id/clearButton"
                    android:contentDescription="@string/desc"
                    android:layout_height="match_parent"
                    android:layout_width="50dp"
                    android:src="@drawable/ic_map_discard"/>

        </LinearLayout>

    </FrameLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_padding_large"/>


    <!-- <View style="@style/DividerHorizontal"/>-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white">

        <TextView
                android:contentDescription="@string/desc"
                android:id="@+id/typeButton"
                style="@style/BorderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="BUYING"/>

        <View android:layout_width="@dimen/view_padding_small" android:layout_height="match_parent"
                android:background="@color/background_gray_color"/>

        <TextView
                android:contentDescription="@string/desc"
                android:id="@+id/locationButton"
                style="@style/BorderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="LOCALLY"/>

    </LinearLayout>


    =<View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_padding_large"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="horizontal">

        <Button
                android:id="@+id/searchButton"
                style="@style/ButtonGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Search"/>
        
     </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_padding_xlarge"/>

</LinearLayout>

