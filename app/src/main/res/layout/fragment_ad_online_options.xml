<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="16dp">
    
    
    <!-- Payment Details -->
    
    <LinearLayout
            android:id="@+id/paymentDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_padding"
                android:paddingLeft="@dimen/activity_padding"
                android:paddingRight="@dimen/activity_padding"
                android:text="@string/text_payment_details"/>
    
        <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_padding_small"/>
    
        <EditText
                android:id="@+id/editPaymentDetails"
                style="@style/TextLarge.SmallAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:theme="@style/EditTextTheme"
                android:hint="@string/text_hint_payment_details"/>
    
        <TextView
                style="@style/TextSmall"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/activity_padding"
                android:paddingRight="@dimen/activity_padding"
                android:text="@string/advertisement_payment_details"/>

    </LinearLayout>

    <!-- Phone Number -->
    
    <include layout="@layout/view_phone"/>
    
    <!-- Minimum Volume -->

    <TextView
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_padding"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:text="@string/text_minimum_volume"/>

    <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_padding_small"/>

    <EditText
            android:id="@+id/minimumVolumeText"
            style="@style/TextLarge.SmallAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_padding"
            android:layout_marginRight="@dimen/activity_padding"
            android:gravity="center_vertical"
            android:hint="0"
            android:inputType="numberDecimal"
            android:digits=".0123456789"
            android:theme="@style/EditTextTheme"/>

    <TextView
            style="@style/TextSmall"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:text="@string/text_minimum_volume_description"/>

    <View
            android:background="?android:attr/dividerHorizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    
    <!-- Minimum Feedback -->

    <TextView
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_padding"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:text="@string/text_minimum_feedback_score"/>

    <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_padding_small"/>

    <EditText
            android:id="@+id/minimumFeedbackText"
            style="@style/TextLarge.SmallAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_padding"
            android:layout_marginRight="@dimen/activity_padding"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="3"
            android:hint="0"
            android:gravity="center_vertical"
            android:theme="@style/EditTextTheme"/>

    <TextView
            style="@style/TextSmall"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:text="@string/text_minimum_feedback_score_description"/>
    
    <View
            android:background="?android:attr/dividerHorizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    
    <!-- New Buyer Limit -->

    <TextView
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_padding"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:text="@string/text_new_buyer_limit"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_padding_small"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/newBuyerLimitText"
                style="@style/TextLarge.SmallAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:theme="@style/EditTextTheme"
                android:inputType="numberDecimal"
                android:digits=".0123456789"/>

        <TextView
                style="@style/TextMedium.SmallAction.White"
                android:minWidth="50dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_blue_selector"
                android:text="@string/btc"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0"
                android:layout_marginBottom="2dp"/>

    </LinearLayout>
    
    <TextView
            style="@style/TextSmall"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:text="@string/text_new_buyer_limit_description"/>

    <View
            android:background="?android:attr/dividerHorizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

</LinearLayout>