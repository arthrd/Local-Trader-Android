<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/detailsPhoneNumberLayout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_padding"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:text="@string/text_phone_number"/>

    <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_padding_small"/>

    <EditText
            android:id="@+id/detailsPhoneNumber"
            style="@style/TextLarge.SmallAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_padding"
            android:layout_marginRight="@dimen/activity_padding"
            android:theme="@style/EditTextTheme"
            android:inputType="phone"
            android:hint="@string/text_phone_number_hint"/>

    <TextView
            android:id="@+id/detailsPhoneNumberDescription"
            style="@style/TextSmall"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:text="@string/text_phone_number_description"/>

    <View
            android:background="?android:attr/dividerHorizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

</LinearLayout>