<android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/swipeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            android:fitsSystemWindows="true">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fitsSystemWindows="true"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">
        
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/Theme.AppCompat.Light"/>

        <LinearLayout
                android:id="@+id/bitcoinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingTop="@dimen/activity_space"
                android:paddingBottom="@dimen/activity_space"
                android:paddingLeft="72dp">

            <TextView
                    android:id="@+id/bitcoinTitle"
                    style="@style/TextMedium.SmallAction.White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    tools:text="MARKET PRICE"/>

            <TextView
                    android:id="@+id/bitcoinPrice"
                    style="@style/TextExtraLarge.White.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/bitcoinValue"
                    style="@style/TextSmall.White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"/>

        </LinearLayout>
     
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_list_spacing"
            android:layout_marginEnd="@dimen/activity_list_spacing"
            android:src="@drawable/ic_action_barcode_2"
            android:layout_marginBottom="@dimen/activity_list_spacing"
            app:layout_anchor="@id/swipeLayout"
            app:layout_anchorGravity="bottom|right|end"
            app:elevation="4dp"
            app:borderWidth="0dp"
            app:fabSize="normal"/>

</android.support.design.widget.CoordinatorLayout>
