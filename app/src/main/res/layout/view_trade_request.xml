<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordinatorLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
                android:id="@+id/tradeRequestToolbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:minHeight="?android:attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/Theme.AppCompat.Light"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/requestContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/view_padding_xlarge"
                android:paddingBottom="@dimen/activity_padding"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tradeAmountTitle"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_padding"
                    android:paddingRight="@dimen/activity_padding"
                    android:text="Trade amount"/>

            <TextView
                    android:id="@+id/tradeLimit"
                    style="@style/SmallText.ExtraSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_padding"
                    android:paddingRight="@dimen/activity_padding"
                    android:text="Min 1000 - Max 20000 ARS"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_padding"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_padding"
                    android:paddingRight="@dimen/activity_padding"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/editBitcoinText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextLarge.SmallAction"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:theme="@style/EditTextTheme"
                        android:hint="@string/hint_bitcoin"
                        android:nextFocusForward="@+id/editAmountText"/>

                <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"/>

                <TextView
                        android:id="@android:id/button1"
                        style="@style/TextLarge.SmallAction.White"
                        android:minWidth="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="@drawable/button_blue_selector"
                        android:clickable="true"
                        android:text="@string/btc"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0"
                        android:layout_marginBottom="2dp"/>

                <View
                        android:layout_width="@dimen/view_padding_small"
                        android:layout_height="match_parent"/>

                <EditText
                        android:id="@+id/editAmountText"
                        android:theme="@style/EditTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextLarge.SmallAction"
                        android:inputType="numberDecimal"
                        android:digits="0123456789."
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="@string/hint_amount"
                        android:nextFocusForward="@+id/buttonLayout"/>

                <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/tradeCurrency"
                        style="@style/TextMedium.SmallAction.White"
                        android:minWidth="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="@drawable/button_blue_selector"
                        android:clickable="true"
                        android:text="@string/usd"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0"
                        android:layout_marginBottom="2dp"/>

            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_padding"/>

            <TextView
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_padding"
                    android:paddingRight="@dimen/activity_padding"
                    android:text="Add message or contact info"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_padding_small"/>

            <EditText
                    android:id="@+id/messageText"
                    style="@style/TextLarge.SmallAction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_padding"
                    android:layout_marginRight="@dimen/activity_padding"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:minLines="1"
                    android:gravity="left|bottom"
                    android:theme="@style/EditTextTheme"
                    android:hint="Enter message"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_padding_small"/>
            

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

        <View
                android:id="@+id/divider"
                android:background="?android:attr/dividerHorizontal"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>

       
            <Button
                    style="@style/ButtonGreen.Small"
                    android:id="@+id/sendButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/button_send"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>