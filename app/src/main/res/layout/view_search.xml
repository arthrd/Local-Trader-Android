<android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/Theme.AppCompat.Light"/>

        </android.support.design.widget.AppBarLayout>
        
        <android.support.v4.widget.NestedScrollView
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/view_padding_small"
                        android:paddingBottom="@dimen/view_padding_small"
                        android:paddingLeft="@dimen/view_padding"
                        android:paddingRight="8dp">
                    
                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <android.support.design.widget.TextInputLayout
                                android:id="@+id/editLocationLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/EditTextTheme"
                                android:visibility="visible">
    
                            <AutoCompleteTextView
                                    android:theme="@style/EditTextTheme"
                                    style="@style/TextAppearance.AppCompat.Medium"
                                    android:id="@+id/editLocationText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    tools:text="Los Angeles, California, Los Angeles, United States"
                                    tools:background="@color/blue"
                                    android:maxLines="3"
                                    android:hint="Enter city or address"/>
    
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:id="@+id/locationText"
                                android:paddingTop="16dp"
                                android:paddingLeft="0dp"
                                android:paddingRight="4dp"
                                android:paddingBottom="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:singleLine="false"
                                android:maxLines="3"
                                tools:text="Los Angeles, California, Los Angeles, United States"
                                tools:visibility="visible"
                                android:visibility="gone"/>
                        
                    </FrameLayout>

                    <ImageButton
                            style="@style/BorderlessButtonStyle"
                            android:id="@+id/clearButton"
                            android:contentDescription="@string/desc"
                            android:layout_height="36dp"
                            android:layout_width="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_action_content_clear"
                            android:layout_weight="0"/>

                </LinearLayout>
                
                <View
                        style="@style/DividerHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/view_padding_small"
                            android:paddingBottom="@dimen/view_padding_small"
                            android:paddingLeft="@dimen/view_padding"
                            android:paddingRight="@dimen/view_padding"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buying or selling?"
                                android:gravity="left"/>

                        <Spinner
                                android:id="@+id/typeSpinner"
                                android:theme="@style/SpinnerTheme"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                    </LinearLayout>

                    <View
                            style="@style/DividerVertical"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/view_padding_small"
                            android:paddingBottom="@dimen/view_padding_small"
                            android:paddingLeft="@dimen/view_padding"
                            android:paddingRight="@dimen/view_padding"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Locally or online?"
                                android:gravity="left"/>

                        <Spinner
                                android:id="@+id/locationSpinner"
                                android:theme="@style/SpinnerTheme"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        
                    </LinearLayout>

                </LinearLayout>

                <View
                        style="@style/DividerHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                <LinearLayout
                        android:id="@+id/paymentMethodLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/view_padding_small"
                        android:visibility="gone"
                        tools:visibility="visible">

                    <TextView
                            style="@style/TextSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Online payment method?"
                            android:gravity="left"
                            android:layout_marginLeft="@dimen/view_padding"/>

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/view_padding"
                            android:paddingLeft="@dimen/view_padding"
                            android:paddingRight="@dimen/view_padding">

                        <Spinner
                                android:id="@+id/paymentMethodSpinner"
                                android:theme="@style/SpinnerTheme"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                    </FrameLayout>

                    <View
                            style="@style/DividerHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                </LinearLayout>
                
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <View
                android:id="@+id/divider"
                android:background="?android:attr/dividerHorizontal"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    style="@style/ButtonGreen.Small"
                    android:id="@+id/searchButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:textAllCaps="true"
                    android:text="@string/button_search_trades"/>

        </LinearLayout>

    </LinearLayout>
    
</android.support.design.widget.CoordinatorLayout>